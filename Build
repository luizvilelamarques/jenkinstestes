class Build {
     
     def isMavem
     def isNode
     def package
     
     def build(buildInfo){
          if (isMavem){
              _buildMaven()
          }else if (isNode){ 
              _buildNode()
          }
     }

     def _buildNode(packagejson) {
          sh " npm run build -f ${package}"
     }

     def _buildMaven(filepom) {
          sh " mvn clean install -f ${package}"
     }
}

def instancia(buildInfo){
     return new Build(isMavem: buildInfo.tipoProjetoMaven, isNode: buildInfo.tipoProjetoNode, package: buildInfo.package)
}

return this
